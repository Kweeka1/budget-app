<div class="bg-white w-full h-full flex flex-col">
  <div class="h-[10%] flex justify-between items-center p-1 bg-sky-700">
    <%= link_to expenses_path(@group_id) do %>
      <i class="fa-solid fa-arrow-left p-1 cursor-pointer text-3xl text-white ease-in duration-200 hover:text-slate-300"></i>
    <% end %>
    <h2 class="text-white text-lg">Expense</h2>
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-sm pr-1 text-white" %>
  </div>
  <%= form_with model: @expense, url: create_expense_path, id: 'new_expense', class: "flex flex-col bg-slate-200 flex-1 justify-between", method: :post do |form| %>
    <div class="flex flex-col gap-2 p-4">
      <div class="p-2 rounded ease-in duration-200 bg-slate-300 cursor-pointer flex relative">
        <%= form.text_field :name, placeholder: "Name", class: "w-[100%] rounded border-slate-300" %>
      </div>
      <div class="p-2 rounded ease-in duration-200 bg-slate-300 cursor-pointer flex relative">
        <%= form.text_field :amount, placeholder: "Amount", class: "w-[100%] rounded border-slate-300" %>
      </div>
      <div class="p-2 rounded ease-in duration-200 bg-slate-300 cursor-pointer flex relative">
        <%= select_tag "category", options_for_select(@groups), id: "select", class: "w-[100%] rounded border-slate-300" %>
      </div>
      <div class="p-3">
        <% if @expense.errors.any? %>
          <ul>
            <% @expense.errors.full_messages.each do |message| %>
              <li class="text-red-600"><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col p-4 gap-2 bg-slate-100">
      <%= form.submit 'ADD NEW EXPENSE', class: "text-center cursor-pointer p-4 bg-lime-700 rounded text-white ease-in duration-200 hover:bg-lime-800" %>
    </div>
  <% end %>
</div>
<style>
  .field_with_errors {
    width: 100%
  }
  .field_with_errors > input {
    width: 100%
  }
</style>