<div class="bg-white w-full h-full flex flex-col">
  <div class="h-[10%] flex justify-between items-center p-1 bg-sky-700">
    <%= link_to categories_path do %>
      <i class="fa-solid fa-arrow-left p-1 cursor-pointer text-3xl text-white ease-in duration-200 hover:text-slate-300"></i>
    <% end %>
    <h2 class="text-white text-lg">Category</h2>
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-sm pr-1 text-white" %>
  </div>
  <%= form_with model: @category, url: create_category_path, id: 'new_category', class: "flex flex-col bg-slate-200 flex-1 justify-between", method: :post do |form| %>
    <div class="flex flex-col gap-2 p-4">
      <div class="p-2 rounded ease-in duration-200 bg-slate-300 cursor-pointer flex relative">
        <%= form.text_field :name, placeholder: "Name", class: "w-[100%] rounded border-slate-300" %>
      </div>
      <div class="p-2 rounded ease-in duration-200 bg-slate-300 cursor-pointer flex relative">
        <%= form.text_field :icon, placeholder: "Icon Url", class: "w-[100%] rounded border-slate-300" %>
      </div>
      <div class="p-3">
      <% if @category.errors.any? %>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>
    </div>
    <div class="flex flex-col p-4 gap-2 bg-slate-100">
      <%= form.submit 'ADD NEW CATEGORY', class: "text-center cursor-pointer p-4 bg-lime-700 rounded text-white ease-in duration-200 hover:bg-lime-800" %>
    </div>
  <% end %>
</div>
<style>
  .field_with_errors {
    width: 100%
  }
  .field_with_errors > input {
    width: 100%
  }
</style>