<div class="bg-slate-100 w-full h-full flex flex-col">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="h-[25%] bg-sky-700 flex w-100 justify-between items-center relative">
      <%= link_to root_path do %>
        <i class="fa-solid fa-arrow-left p-3 cursor-pointer text-3xl text-white ease-in duration-200 hover:text-slate-300"></i>
      <% end %>
      <h2 class="font-['inter'] text-slate-100 text-2xl text-center justify-self-center">REGISTER</h2>
      <%= f.submit "Sign up", class: "text-white text-sm p-2 cursor-pointer" %>
    </div>
    <div class="my-3 w-100 flex flex-col">
      <%= f.text_field :name, class: "px-5 py-2 w-100 border-0 border-t-[1px] border-slate-200", placeholder: "Name" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-5 py-2 w-100 border-0 border-y-[1px] border-slate-200", placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "px-5 py-2 w-100 border-0 border-b-[1px] border-slate-200", placeholder: "Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-5 py-2 w-100 border-0 border-b-[1px] border-slate-200", placeholder: "Confirm password" %>
    </div>
  <% end %>
  <div class="p-3">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
<style>
  .field_with_errors > input {
    width: 100%
  }
</style>
